{
  "name": "chordpro",
  "displayName": "ChordPro",
  "publisher": "ricardomfmsousa",
  "description": "Provides ChordPro support for Visual Studio Code",
  "author": {
    "name": "Ricardo Marques de Sousa"
  },
  "version": "0.2.0",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "release:major": "scripts/./release.sh major",
    "release:minor": "scripts/./release.sh minor",
    "release:patch": "scripts/./release.sh patch"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "license": "MIT",
  "icon": "images/chordpro.png",
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets",
    "Formatters"
  ],
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/ricardomfmsousa/vscode-chordpro.git"
  },
  "bugs": {
    "url": "https://github.com/ricardomfmsousa/vscode-chordpro/issues"
  },
  "contributes": {
    "languages": [
      {
        "id": "chordpro",
        "aliases": [
          "ChordPro",
          "chordpro",
          "chord"
        ],
        "extensions": [
          ".cho",
          ".crd",
          ".chord",
          ".chopro",
          ".chordpro",
          ".pro"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "chordpro",
        "scopeName": "text.chordpro",
        "path": "./syntaxes/chordpro.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[chordpro]": {
        "editor.wordBasedSuggestions": false
      }
    },
    "snippets": [
      {
        "language": "chordpro",
        "path": "./snippets/chordpro.json"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
